{
	"useTabs": true,
	"arrowParens": "avoid",
	"tabWidth": 4,
	"singleQuote": true,
	"printWidth": 100,
	"trailingComma": "all",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{ "files": "{j,t}sconfig.json", "options": { "parser": "jsonc" } },
		{ "files": "**/*.yml", "options": { "useTabs": false, "tabWidth": 2 } },
		{ "files": "**/*.svelte", "options": { "parser": "svelte", "svelteStrictMode": false } }
	]
}
